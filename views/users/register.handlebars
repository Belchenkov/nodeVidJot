<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <img src="/img/logo.png" alt="logo" class="logo">
            <h3 class="text-center">Account Register</h3>
            <form action="/users/register" method="post">
                <div class="form-group">
                    <label for="name">
                        <img src="https://img.icons8.com/office/16/000000/user.png">
                        Name
                    </label>
                    <input
                            type="text"
                            name="name"
                            class="form-control"
                            required
                            value="{{name}}"
                    >
                </div>
                <div class="form-group">
                    <label for="email">
                        <img src="https://img.icons8.com/office/16/000000/secured-letter.png">
                        Email
                    </label>
                    <input
                            name="email"
                            type="email"
                            class="form-control"
                            required
                            value="{{email}}"
                    >
                </div>
                <div class="form-group">
                    <label for="password">
                        <img src="https://img.icons8.com/office/16/000000/private2.png">
                        Password
                    </label>
                    <input
                            type="password"
                            name="password"
                            class="form-control"
                            required
                            value="{{password}}"
                    >
                </div>
                <div class="form-group">
                    <label for="password">
                        <img src="https://img.icons8.com/office/16/000000/private2.png">
                        Confirm Password
                    </label>
                    <input
                            type="password"
                            name="password2"
                            class="form-control"
                            required
                            value="{{password2}}"
                    >
                </div>
                <button type="submit" class="btn btn-block btn-danger">
                    <img src="https://img.icons8.com/office/16/000000/edit-user-male.png">
                    Register
                </button>
            </form>
        </div>
    </div>
</div>